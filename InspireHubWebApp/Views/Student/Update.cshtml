@using InspireHubWebApp.DTOs;
@model Application

@{
    ViewData["Title"] = "Students";
    ViewData["MenuNo"] = 3;
    ViewData["HeaderNo"] = 1;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title mb-0">Update Student</h3>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
            <input type="hidden" asp-for="@Model.TrainingId" value="@Model.TrainingId" />
            <input type="hidden" asp-for="@Model.CreateDate" value="@Model.CreateDate" />
            <input type="hidden" asp-for="@Model.Price" value="@Model.Price" />
            <input type="hidden" asp-for="@Model.IsDeleted" value="@Model.IsDeleted" />
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-label">Phone</label>
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Phone" />
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Training</label>
                        <input type="text" class="form-control" disabled value="@Model.CourseTitle" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" class="form-control" disabled value="@Model.Price" />
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Is Confirmed</label>
                        <span class="switch switch-outline switch-icon switch-success">
				            <label>
					            <input type="checkbox" asp-for="IsConfirmed" />
					            <span></span>
				            </label>
			            </span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Is Paid</label>
                        <span class="switch switch-outline switch-icon switch-success">
				            <label>
					            <input type="checkbox" asp-for="IsPaid" />
					            <span></span>
				            </label>
			            </span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="d-flex justify-content-between mt-5">
                        <button type="submit" class="btn btn-primary">Ruaj</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}